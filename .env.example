APP_NAME="Telemedicina Para Todos"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Banco de dados: pgsql (PostgreSQL) ou mysql
DB_CONNECTION=pgsql
DB_HOST=127.0.0.1
DB_PORT=5432
DB_DATABASE=telemedicina
DB_USERNAME=postgres
DB_PASSWORD=

# Exemplo para MySQL (use DB_PORT=3306)
# DB_CONNECTION=mysql
# DB_PORT=3306
# DB_DATABASE=telemedicina
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting: log (desativado), reverb (WebSocket). No Docker Compose o Reverb sobe como serviço na porta 8080.
BROADCAST_CONNECTION=log
# Reverb (notificações/WebSocket em tempo real) — preencha para ativar; deixe vazio para desativar sem erros no console.
# Deploy/Docker: no compose já existem REVERB_*; para produção altere REVERB_HOST (ex. domínio) e use REVERB_SCHEME=https.
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http
# Servidor Reverb (container): escuta em REVERB_SERVER_HOST:REVERB_SERVER_PORT. No Docker: 0.0.0.0:8080.
REVERB_SERVER_HOST=127.0.0.1  # Use 0.0.0.0 em containers Docker
REVERB_SERVER_PORT=8080

FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# RabbitMQ (opcional: use QUEUE_CONNECTION=rabbitmq para filas críticas; padrão do dia a dia: redis)
# Valores padrão alinhados ao docker-compose (telemedicina/secret); altere em produção.
RABBITMQ_HOST=127.0.0.1
RABBITMQ_PORT=5672
RABBITMQ_USER=telemedicina
RABBITMQ_PASSWORD=secret
RABBITMQ_VHOST=/
# RABBITMQ_QUEUE=default
# RABBITMQ_RETRY_AFTER=90

MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# S3 / MinIO (Storage Node — PC1). Use apenas variáveis de ambiente; não fixar IP no código.
# MinIO: endpoint = API do PC1, ex. http://<IP_PC1>:9000 (ver tutorial PC1 Storage Node).
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
# Obrigatório para MinIO: URL da API S3 (ex. http://192.168.1.10:9000). Deixe vazio para AWS real.
AWS_ENDPOINT=
# Para MinIO use true (path-style). Opcional: defina MINIO_ENDPOINT no .env e use AWS_ENDPOINT="${MINIO_ENDPOINT}".
AWS_USE_PATH_STYLE_ENDPOINT=true

VITE_APP_NAME="${APP_NAME}"
