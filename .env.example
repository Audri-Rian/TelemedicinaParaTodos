# =============================================================================
# Variáveis mínimas para rodar local: APP_*, DB_*, BROADCAST_CONNECTION (ou log),
# QUEUE_CONNECTION, CACHE_STORE. Para tempo real: REVERB_*. Para produção: Mail, Storage (S3).
# =============================================================================

APP_NAME="Telemedicina Para Todos"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting: use "log" para desativar WebSocket sem erro; "reverb" para tempo real.
BROADCAST_CONNECTION=log

# Reverb (WebSocket) — notificações/atualizações em tempo real. Preencha para ativar; use BROADCAST_CONNECTION=log para desativar.
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http
# Porta em que o processo "php artisan reverb:start" escuta (Nginx faz proxy para esta porta em produção)
REVERB_SERVER_PORT=8090

# Storage: "local" para desenvolvimento; "s3" para produção (configure AWS_* abaixo).
FILESYSTEM_DISK=local

# Queue: "database" não exige Redis; "redis" usa as variáveis REDIS_* abaixo para processar jobs em background.
QUEUE_CONNECTION=database

# Cache: "database" ou "file" sem Redis; "redis" exige Redis rodando.
CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# Redis — obrigatório se CACHE_STORE=redis ou QUEUE_CONNECTION=redis.
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail: "log" apenas grava em log; configure SMTP (ou provider) para envio real.
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS / S3 — para FILESYSTEM_DISK=s3 em produção.
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"
